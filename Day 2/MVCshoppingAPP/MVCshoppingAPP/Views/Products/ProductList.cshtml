

<h1> Product List </h1>

<table class="table table-bordered">
    @foreach (var item in ViewBag.products)
    {
        <tr>
            <td> @item.pId </td>
            <td> @item.pName </td>
            <td> @item.pCategory </td>
            <td> @item.pPrice </td>
            <td> @item.pIsInStock </td>
            <td> <button class="btn btn-primary">Add To Cart</button> </td>
        </tr>
    }
</table>
